<?xml version="1.0" encoding="UTF-8"?>
<eventPublisher name="EmailDailyReportPublisher" statistics="disable"
  trace="disable" xmlns="http://wso2.org/carbon/eventpublisher">
  <from streamName="com.wso2telco.notificationStream" version="1.0.0"/>
  <mapping customMapping="enable" type="text">
    <inline>&lt;p&gt;Hi&lt;/p&gt;
&lt;p&gt;Please find the operator:{{operator}} appid:{{appid}} daily status update for {{day}} here: &lt;/p&gt;
{{htmlBody}}
&lt;p&gt;Regards&lt;/p&gt;
&lt;p&gt;WSO2Telco&lt;/p&gt;
</inline>
  </mapping>
  <to eventAdapterType="email">
    <property name="email.subject">Operator: {{operator}} AppID:{{appid}} Daily Status Update for {{day}}</property>
    <property name="email.address">{{emails}}</property>
    <property name="email.type">text/html</property>
  </to>
</eventPublisher>
